<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_apps"
    android:orientation="vertical"
    tools:context=".Login_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="@string/apps_login"
            android:textColor="@color/corFonte"
            android:textSize="50sp"
            android:textStyle="bold" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="15dp"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:padding="20dp"
            android:textColor="@color/corFonte"
            android:textColorHint="@color/corFonte"
            android:textSize="20dp" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_question_mark"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:padding="20dp"
            android:textColor="@color/corFonte"
            android:textColorHint="@color/corFonte"
            android:textSize="20dp" />

        <Button
            android:layout_width="300dp"
            android:drawableTop="@drawable/ic_login"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/botao"
            android:paddingTop="25dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/don_t_have_an_account"
                android:textColor="@color/corFonte" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:text="@string/create_new"
                android:textColor="@color/corFonte" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>